{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "allowJs": false,
    "pretty": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "declaration": true,
    "skipLibCheck": true,
    "lib": ["ES2019"],
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["dangerfile.ts", "node_modules", "dist"]
}
